{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    // These options can help reduce TypeScript strictness if needed
    "noImplicitAny": false,           // Allow implicit any types
    "strictNullChecks": false,        // Allow null/undefined assignments
    "strictFunctionTypes": false,     // Less strict function type checking
    "noImplicitReturns": false,       // Don't require all code paths to return
    "noImplicitThis": false,          // Allow implicit 'this' context
    "noUnusedLocals": false,          // Allow unused local variables
    "noUnusedParameters": false,      // Allow unused function parameters

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "types": ["jest", "@testing-library/jest-dom"],
  "exclude": ["node_modules"]
}
